#include <bits/stdc++.h> 
void sort012(int *arr, int n)
{
   //   Write your code here
   int s=0;
   int l=n-1;
   int mid=0;
    
   while(mid<=l){
      
      if(arr[mid]==0){
         swap(arr[mid],arr[s]);
         s++;
         mid++;
      }
      else if(arr[mid]==1){
         mid++;
      }
      else{
         swap(arr[mid],arr[l]);
         l--;
         
      }
   } 
   
}
